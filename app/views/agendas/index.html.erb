<%= render 'shared/nav' %>
<body contenteditable="false">
  <!--Page Header TABLET & COMPUTER ONLY-->
  <header> 
    <!--Banner imagery-->
    <div class="navbar-fixed">
      <nav class="red darken-4">

          <div class="nav-wrapper">
            <a href="#" class="brand-logo">
              <%= image_tag "logo-chips.png" %>
            </a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><a href="notifications.html"><i class="material-icons">notifications</i></a></li>
              <li><a href="users.html"><i class="material-icons">account_circle</i></a></li>
              <li><a href="settings.html"><i class="material-icons">settings</i></a></li>
            </ul>
          </div>
        
      </nav>
    </div>
    <ul class="sidenav" id="mobile-demo">
      <li><a href="notifications.html">Notification Center</a></li>
      <li><a href="users.html">Profile</a></li>
      <li><a href="collapsible.html">Settings</a></li>
    </ul>
  </header>

  <!--Page Title-->
  <div class="row">
    <div class="col s12 black amber-text text-lighten-2 "><h4>AGENDA</h4></div>
  </div> 
  <!--Active / Archive Tab-->
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#Incomplete">Incomplete</a></li>
        <li class="tab col s3"><a href="#Archived">Archived</a></li>
      </ul>
    </div>
    <div id="Incomplete" class="col s12">
      <!--Table: Incomplete / Active-->
      <br>
      <div class="container">
        <table class="highlight">
          <thead>
            <tr>
                <th>Completed?</th>
                <th>Category</th>
                <th>Agenda Item</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @agendas.each do |agenda| %>
              <tr>
                <td>
                  <div class="switch">
                    <label>
                      <input type="checkbox">
                      <span class="lever"></span>
                    </label>
                  </div>
                </td>
                <td><%= agenda.agendacategory %></td>
                <td><%= agenda.topic %></td>
                <!-- Modal Trigger -->
                <td>
                  <%= link_to agenda, :class => "waves-effect waves-light btn modal-trigger" do %>
                    <i class="material-icons white-text">more_horiz</i>
                  <% end %>
                  <!-- Modal Structure -->
                    <div id="details1" class="modal">
                      <div class="modal-content">
                        <h4>Agenda Item: Details</h4>
                        <div class="chip">
                          Incomplete
                        </div>
                        <div class="row">
                          <form class="input-field col s12">
                            <input id="item_title" type="text" class="validate">
                            <label for="item_title">Agenda Item Title</label>
                          </form>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
                      </div>
                    </div>
                <td>
                  <%= link_to edit_agenda_path(agenda), :class => "waves-effect waves-light btn modal-trigger" do %>
                    <i class="material-icons white-text">mode_edit</i>
                  <% end %>
                </td>
                <td>
                  <%= link_to agenda, method: :delete, data: { confirm: 'Are you sure?' }, :class => "waves-effect waves-light btn modal-trigger" do %>
                    <i class="material-icons white-text">delete_forever</i>
                  <% end %>
                </td>
              </tr>
          </tbody>
        <% end %>
</table>

<br>

<%= link_to 'New Agenda', new_agenda_path %>
