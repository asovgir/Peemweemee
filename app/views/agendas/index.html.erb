    <!--Banner imagery-->
    <div class="navbar-fixed">
      <nav class="red darken-4">

          <div class="nav-wrapper">
            <a href="#" class="brand-logo">
              <%= image_tag "logo-chips.png" %>
            </a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><a href="notifications.html"><i class="material-icons">notifications</i></a></li>
              <li><a href="users.html"><i class="material-icons">account_circle</i></a></li>
              <li><a href="settings.html"><i class="material-icons">settings</i></a></li>
            </ul>
          </div>
        
      </nav>
    </div>
    <ul class="sidenav" id="mobile-demo">
      <li><a href="notifications.html">Notification Center</a></li>
      <li><a href="users.html">Profile</a></li>
      <li><a href="collapsible.html">Settings</a></li>
    </ul>
  </header>

  <!--Page Title-->
  <div class="row">
    <div class="col s12 black amber-text text-lighten-2 "><h4>AGENDA</h4></div>
  </div> 
  <!--Active / Archive Tab-->
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#Incomplete">Incomplete</a></li>
        <li class="tab col s3"><a href="#Archived">Archived</a></li>
      </ul>
    </div>
    <div id="Incomplete" class="col s12">
      <!--Table: Incomplete / Active-->
      <br>
      <div class="container">
        <table class="highlight">
          <thead>
            <tr>
                <th>Completed?</th>
                <th>Category</th>
                <th>Agenda Item</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
          </thead>

  <tbody>
    <% @agendas.each do |agenda| %>
      <tr>
        <td><%= agenda.is_complete %></td>
        <td><%= agenda.topic %></td>
        <td><%= link_to 'Show', agenda %></td>
        <td><%= link_to 'Edit', edit_agenda_path(agenda) %></td>
        <td><%= link_to 'Destroy', agenda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

